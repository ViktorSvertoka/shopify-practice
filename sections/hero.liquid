{% schema %}
{
  "name": "Hero Steve",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Заголовок",
      "default": "Steve Jobs"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Цитата",
      "default": "Have the courage to follow your heart and intuition. They somehow already know what you truly want to become. Everything else is secondary. — Steve Jobs"
    },
    {
      "type": "text",
      "id": "button_primary",
      "label": "Текст кнопки",
      "default": "Join to Fanclub"
    },
    {
      "type": "text",
      "id": "button_secondary",
      "label": "Текст кнопки",
      "default": "Sign In"
      
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Посилання кнопки",
      "default": "/"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Фото"
    }
  ],
  "presets": [
    {
      "name": "Hero Steve"
    }
  ]
}
{% endschema %}

<section class="hero">
  <div class="hero__container">
    
    <div class="hero__content">
      <h1 class="hero__title">{{ section.settings.title }}</h1>
      <p class="hero__quote">{{ section.settings.text }}</p>
      
      <div class="hero__actions">
        <a href="{{ section.settings.button_url }}" class="hero__button hero__button--primary">
          {{ section.settings.button_primary }}
        </a>
        <a href="{{ section.settings.button_url }}" class="hero__button hero__button--secondary">
          {{ section.settings.button_secondary }}
        </a>
      </div>

      <div class="hero__socials">
        <a href="https://instagram.com" target="_blank" class="hero__social-link">
          <img src="{{ 'instagram.svg' | asset_url }}" alt="Instagram" class="hero__social-icon">
        </a>
        <a href="https://facebook.com" target="_blank" class="hero__social-link">
          <img src="{{ 'facebook.svg' | asset_url }}" alt="Facebook" class="hero__social-icon">
        </a>
        <a href="https://youtube.com" target="_blank" class="hero__social-link">
          <img src="{{ 'youtube.svg' | asset_url }}" alt="YouTube" class="hero__social-icon">
        </a>
        <a href="https://twitter.com" target="_blank" class="hero__social-link">
          <img src="{{ 'twitter.svg' | asset_url }}" alt="Twitter" class="hero__social-icon">
        </a>
      </div>
    </div>

    <div class="hero__image">
      {% if section.settings.image != blank %}
        <img class="hero__img" src="{{ section.settings.image | image_url }}" alt="{{ section.settings.title }}">
      {% endif %}
    </div>

  </div>
</section>

<style>
:root {
  --color-black: #000;
  --color-white: #fff;
  --color-text: #555;
}

.hero {
  background: var(--color-white);
}

.hero__container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20px;
  max-width: 1600px;
  padding: 50px 0 0 50px;
  margin: 0 auto;
  position: relative;
}

@media (min-width: 768px) {
  .hero__container {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
  }
}

.hero__content {
  flex: 1;
}

.hero__title {
  font-size: 48px;
  font-weight: 900;
  text-align: center;
  margin-bottom: 20px;
}

@media (min-width: 768px) {
  .hero__title {
    font-size: 100px;
    text-align: left;
  }
}

.hero__quote {
  font-size: 18px;
  font-style: italic;
  color: var(--color-text);
  text-align: center;
  margin-bottom: 30px;
}

@media (min-width: 768px) {
  .hero__quote {
    font-size: 24px;
    width: 630px;
    height: 132px;
    text-align: left;
  }
}

.hero__actions {
  display: flex;
  flex-direction: column;
  gap: 15px;
  align-items: center;
  margin-bottom: 30px;
}

@media (min-width: 768px) {
  .hero__actions {
    flex-direction: row;
    margin-top: 80px;
    gap: 20px;
  }
}

.hero__button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 252px;
  height: 70px;
  border-radius: 50px;
  font-weight: bold;
  font-size: 18px;
  text-decoration: none;
  transition: all 0.3s;
  text-transform: uppercase;
}

.hero__button--primary {
  background: var(--color-black);
  color: var(--color-white);
}

.hero__button--primary:hover {
  background: var(--color-white);
  color: var(--color-black);
  border: 2px solid var(--color-black);
}

.hero__button--secondary {
  border: 2px solid var(--color-black);
  color: var(--color-black);
}

.hero__button--secondary:hover {
  background: var(--color-black);
  color: var(--color-white);
}

.hero__image .hero__img {
  width: 350px;
  display: block;
}

@media (min-width: 768px) {
  .hero__image .hero__img {
    width: 750px;
  }
}

.hero__socials {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  margin-top: 20px;
}

@media (min-width: 768px) {
  .hero__socials {
    align-items: flex-start;
    justify-content: flex-start;
    gap: 10px;
    margin-top: 20px;
  }
}

.hero__social-link {
  font-size: 24px;
  text-decoration: none;
}
</style>
